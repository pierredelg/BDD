);

/*==============================================================*/
/* Table : CIRCUIT                                              */
/*==============================================================*/
create table CIRCUIT
(
    CNO                  INTEGER         not null,
    REFERENCE            NOTE,
    TITRE                NOTE,
constraint PK_CIRCUIT primary key (CNO)
);

/*==============================================================*/
/* Table : CLIENT                                               */
/*==============================================================*/
create table CLIENT
(
    CLNO                 INTEGER         not null,
    PRENOM               NOTE,
    NOM                  NOTE,
constraint PK_CLIENT primary key (CLNO)
);

/*==============================================================*/
/* Table : ETAPE                                                */
/*==============================================================*/
create table ETAPE
(
    VNO                  INTEGER         not null,
